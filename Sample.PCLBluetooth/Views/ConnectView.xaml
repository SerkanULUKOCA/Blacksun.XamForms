<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sample.PCLBluetooth.Views.ConnectView">
  <ScrollView>
    <StackLayout Padding="20">
      <Label Text="Device Info" FontSize="24"></Label>
      <StackLayout Padding="10">
        <Label Text="Name" FontSize="18"></Label>
        <Label x:Name="txtName" Text="{Binding Device.Name}" FontSize="22"></Label>
      </StackLayout>
      <StackLayout Padding="10">
        <Label Text="Address" FontSize="18"></Label>
        <Label x:Name="txtAddress" Text="{Binding Device.Address}" FontSize="22"></Label>
      </StackLayout>
      <StackLayout Padding="10">
        <Label Text="Unique identifier" FontSize="18"></Label>
        <Label x:Name="txtUniqueIdentifier" Text="{Binding Device.Address}" FontSize="22"></Label>
      </StackLayout>
      <Label Text="Connection Test" FontSize="24"></Label>
      <StackLayout Padding="10">
        <Label Text="Port" FontSize="18"></Label>
        <Button Text="Write" Clicked="Button_OnClicked"></Button>
        <Entry x:Name="txtMessage" Text="Hello"></Entry>

      </StackLayout>
    </StackLayout>
  </ScrollView>
</ContentPage>