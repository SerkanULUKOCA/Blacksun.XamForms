<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sample.PCLBluetooth.Views.ConnectedView">
  <StackLayout Padding="20">
    <Label x:Name="txtName" Text="Device Info" FontSize="24"></Label>
    <Button Text="Disconnect" Clicked="DisconnectButtonClick"></Button>
    <StackLayout Padding="10">
      <Label Text="Message" FontSize="18"></Label>
      <Entry x:Name="txtMessage"  Text="" ></Entry>
      <Button Text="Write" Clicked="ButtonWrite_OnClicked"></Button>
    </StackLayout>
  </StackLayout>
</ContentPage>