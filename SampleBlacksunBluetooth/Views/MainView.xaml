<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:SampleBlacksunBluetooth.ViewModels;assembly=SampleBlacksunBluetooth"
             x:Class="SampleBlacksunBluetooth.Views.MainView">
  <ContentPage.BindingContext>
    <viewModels:MainViewModel/>
  </ContentPage.BindingContext>
  <StackLayout Padding="20">
    <Label Text="Bluetooth test" FontSize="24"></Label>
    <Button Text="Check if bluetooth is on" Command="{Binding CheckBluetoothAvailableCommand}"></Button>
    <Button Text="Get paired devices" Command="{Binding GetPairedDevicesCommand}"></Button>
    <ListView VerticalOptions="FillAndExpand" ItemsSource="{Binding Devices}" ItemTapped="ListView_OnItemTapped">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <StackLayout Padding="10">
              <Label Text="{Binding Name}" FontSize="18"></Label>
              <Label Text="{Binding Address}" FontSize="14"></Label>
            </StackLayout>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</ContentPage>